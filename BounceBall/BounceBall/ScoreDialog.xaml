<Window x:Class="BounceBall.ScoreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BounceBall"
        mc:Ignorable="d"
        Title="ScoreDialog" Height="149" Width="232">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Your Name" TextWrapping="Wrap" Height="25" Width="100" HorizontalAlignment="Left"/>
            <TextBox x:Name="NameTextBox" Height="30" Margin="5"/>
            <Button Content="OK" Click="OKButton_Cick" Height="30" Width="100" HorizontalAlignment="Center" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
