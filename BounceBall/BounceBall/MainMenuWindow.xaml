<Window x:Class="BounceBall.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BounceBall"
        mc:Ignorable="d"
        Title="MainMenuWindow" Height="192" Width="308">
    <Grid>
        <StackPanel>
            <Button x:Name="PlayGame" Click="PlayGame_Click" Content="Play Game" Height="25" Width="100" Margin="5"/>
            <Button x:Name="ScoreBoard" Click="ScoreBoard_Click" Content="Score Board" Height="25" Width="100" Margin="5"/>
            <Button x:Name="ExitGame" Click="ExitGame_Click" Content="Exit Game" Height="25" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
